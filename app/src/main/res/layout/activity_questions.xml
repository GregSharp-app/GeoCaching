<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionsActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/pr_green"
        android:orientation="vertical"
        >


        <Button
            android:id="@+id/btn_questions_back"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left"

            android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24"

            />

        <TextView
            android:id="@+id/txt_questions_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Cache Questions"
            android:textAlignment="center"
            android:textColor="@color/pr_gray"
            android:textSize="25dp" />
    </LinearLayout>

    <!-- Questions -->
    <FrameLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        android:elevation="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:padding="5dp"
            android:elevation="1dp"
            android:layout_marginHorizontal="5dp"
            android:orientation="vertical"
            android:background="@drawable/bg"
            android:visibility="visible"
            android:id="@+id/container_question_0"
            >
            <TextView
                android:id="@+id/txt_question_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question 0"
                android:textSize="18dp"
                android:textColor="@color/pr_dark"
                android:layout_weight="1"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/input_answer_0"
                android:layout_weight="2"
                android:textColor="@color/pr_dark"
                />
            <Button
                android:id="@+id/btn_check_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/pr_light_gray"
                android:text="Verify"
                android:textSize="10dp"
                android:textAllCaps="false"
                android:textColor="@color/pr_green"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="This Question is hidden"
            android:textSize="20dp"
            android:textColor="#555"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        android:elevation="10dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:padding="5dp"
        android:elevation="1dp"
        android:layout_marginHorizontal="5dp"
        android:orientation="vertical"
        android:background="@drawable/bg"
        android:visibility="invisible"
        android:id="@+id/container_question_1"
        >
        <TextView
            android:id="@+id/txt_question_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question 1"
            android:textSize="18dp"
            android:textColor="@color/pr_dark"
            android:layout_weight="1"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/input_answer_1"
            android:layout_weight="2"
            android:textColor="@color/pr_dark"
            />
        <Button
            android:id="@+id/btn_check_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/pr_light_gray"
            android:text="Verify"
            android:textSize="10dp"
            android:textAllCaps="false"
            android:textColor="@color/pr_green"
            />
    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="This Question is hidden"
            android:textSize="20dp"
            android:textColor="#555"
            />
    </FrameLayout>


    <FrameLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        android:elevation="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:padding="5dp"
            android:elevation="1dp"
            android:layout_marginHorizontal="5dp"
            android:orientation="vertical"
            android:background="@drawable/bg"
            android:visibility="invisible"
            android:id="@+id/container_question_2"
            >
            <TextView
                android:id="@+id/txt_question_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question 2"
                android:textSize="18dp"
                android:textColor="@color/pr_dark"
                android:layout_weight="1"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/input_answer_2"
                android:layout_weight="2"
                android:textColor="@color/pr_dark"
                />
            <Button
                android:id="@+id/btn_check_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/pr_light_gray"
                android:text="Verify"
                android:textSize="10dp"
                android:textAllCaps="false"
                android:textColor="@color/pr_green"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="This Question is hidden"
            android:textSize="20dp"
            android:textColor="#555"
            />
    </FrameLayout>
</LinearLayout>